@model BETL20250326.AppWebMVC.Models.Brand

@{
    ViewData["Title"] = "crear";
}

<h1>crear nueva</h1>

<h4>marcas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BrandName" class="control-label">nombre</label>
                <input asp-for="BrandName" class="form-control" />
                <span asp-validation-for="BrandName" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-2">
                <input type="submit" value="crear" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<div class="mt-2">
    <a asp-action="Index" class="btn btn-dark">cancelar</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

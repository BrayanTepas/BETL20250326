@model IEnumerable<BETL20250326.AppWebMVC.Models.Brand>

@{
    ViewData["Title"] = "Inicio";
}

<h1>Marcas</h1>
<h1>Buscar marcas</h1>
<form asp-action="Index">
    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label class="control-label">Nombre</label>
                <input type="text" name="BrandName" class="form-control" />
            </div>
        </div>
        

    </div>
    <div>

        <div class="col-4">
            <div class="form-group">
                <label class="control-label">Cant. Registros</label>
                <select name="topRegistro" class="form-control">
                    <option selected value="10">10</option>
                    <option value="20">20</option>
                    <option value="60">60</option>
                    <option value="100">100</option>
                    <option value="500">500</option>
                    <option value="1000">1000</option>
                    <option value="0">Todos</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row mt-3 mb-2">
        <div class="col-12">
            <input type="submit" value="Buscar" class="btn btn-primary" />
            <a class="btn btn-info" asp-action="Create">Ir a crear</a>
        </div>
    </div>
</form>

<table class="table table-success table-striped" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BrandName)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BrandName)
                </td>
                
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning text-white">EDITAR</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">DETALLES</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">ELIMINAR</a>
                </td>
            </tr>
        }
    </tbody>
</table>

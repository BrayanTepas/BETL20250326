@model BETL20250326.AppWebMVC.Models.Product

@{
    ViewData["Title"] = "crear";
}

<h1>crear</h1>

<h4>producto</h4>

<form asp-action="Create">
    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label class="control-label">Nombre del producto</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <label class="control-label">Almacen</label>
                <select asp-for="WarehouseId" class="form-control" asp-items="ViewBag.WarehouseId"></select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label class="control-label">Precio producto</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="col-8">
            <div class="form-group">
                <label class="control-label">Descripción</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-4">
            <div class="form-group">
                <label class="control-label">Marca</label>
                <select asp-for="BrandId" class="form-control" asp-items="ViewBag.BrandId"></select>
            </div>
        </div>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Crear" class="btn btn-success" />
    </div>
</form>


<div class="mt-2">
    <a asp-action="Index" class="btn btn-dark">cancelar</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


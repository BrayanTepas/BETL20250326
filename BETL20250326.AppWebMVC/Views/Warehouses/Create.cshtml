@model BETL20250326.AppWebMVC.Models.Warehouse

@{
    ViewData["Title"] = "crear";
}

<h1>crear</h1>

<h4>Bodega</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WarehouseName" class="control-label">nombre de la bodega</label>
                <input asp-for="WarehouseName" class="form-control" />
                <span asp-validation-for="WarehouseName" class="text-danger"></span>
            </div>
            <div class="row mt-3 mb-2">
                <div class="col-12">
                    <input type="submit" value="crear" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-dark">cancelar</a>
                </div>
            </div>
            
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
